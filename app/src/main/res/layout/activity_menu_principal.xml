<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipalActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <TextView
                android:id="@+id/NombreUsuarioTextView"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="50dp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <Button
                android:id="@+id/btnGooglePay"
                android:layout_margin="10dp"
                android:layout_width="140dp"
                android:layout_height="140dp"/>
            <Button
                android:id="@+id/btnQR"
                android:layout_margin="10dp"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_toRightOf="@+id/btnGooglePay"/>
            <Button
                android:id="@+id/btnGeoLocalizacion"
                android:layout_margin="10dp"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_below="@+id/btnGooglePay"/>
            <Button
                android:id="@+id/btnCofiguracion"
                android:layout_margin="10dp"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_below="@+id/btnQR"
                android:layout_toRightOf="@+id/btnGeoLocalizacion"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>