<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/correo_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="170dp"
        android:text="@string/verificar_por_correo"
        android:background="@drawable/button_rounded"
        android:textStyle="bold"
        android:textSize="12dp"/>

    <Button
        android:id="@+id/google_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/correo_button"
        android:text="@string/verificar_por_google"
        android:background="@drawable/button_rounded"
        android:textStyle="bold"
        android:textSize="12dp"/>
    <Button
        android:id="@+id/number_phone_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/google_button"
        android:text="@string/verificar_por_phone_number"
        android:background="@drawable/button_rounded"
        android:textStyle="bold"
        android:textSize="12dp"/>

    <Button
        android:id="@+id/exit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/number_phone_button"
        android:background="@drawable/button_rounded"
        android:text="@string/salir"
        android:textStyle="bold"
        android:textSize="12dp"/>

</RelativeLayout>